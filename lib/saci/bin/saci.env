# you don't need to modify the following
cd ..
SACI=`pwd`
BIN="$SACI/bin"
cd "$BIN"


BIN="$SACI/bin"
LIB="$SACI/lib"
SRC="$SACI/src"
ULIB="$SACI/ulib"
PCP=../../moise+/src
CLASSPATH=$PCP:"$SRC":"$LIB":"$BIN/saci.jar":"$BIN/moise.jar":"$ULIB":$CLASSPATH


# add all .jar in ulib directory
for j in `ls ../ulib/*jar`; do
#    echo "  ." adding $j on classpath
    CLASSPATH=$CLASSPATH:$j
done

export CLASSPATH

POL="-Djava.security.policy=policy"
RMI="-Djava.rmi.server.codebase=file:saci.jar"


LAUNCHER_PID=.launcher.pid

