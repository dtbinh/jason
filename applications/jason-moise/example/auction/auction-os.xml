<?xml version="1.0" encoding="UTF-8"?>
<organisational-specification 
    id="auction"
    os-version="0.3"
  
    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd' >
    
<structural-specification>

<role-definitions>
 <role id="auctionner" />
 <role id="participant" />
</role-definitions>

<link-types>
 <link-type id="authority"/>
 <link-type id="acquaintance"/>
 <link-type id="communication"/>
</link-types>

<group-specification id="auctionGroup">
 <roles>
  <role id="auctionner"  min="1" max="1"/>
  <role id="participant" min="1" max="300"/>
 </roles>

 <links>
  <link from="auctionner" to="participant" type="communication" scope="intra-group" 
        extends-sub-groups="false" bi-dir="false"/>
 </links>

</group-specification>
</structural-specification>

<functional-specification>
 <scheme id="doAuction">
   <goal id="auction">
     <argument id="N" />
     <plan operator="sequence">
       <goal id="start" />
       <goal id="bid" />
       <goal id="winner" >
         <argument id="W" />
       </goal>
     </plan>
   </goal>
   <mission id="mAuctionner" min="1" max="1">
     <goal id="auction"/>
     <goal id="start" />
     <goal id="winner" />
   </mission>
   <mission id="mParticipant" min="1" >
     <goal id="bid" />
   </mission>
 </scheme>
</functional-specification>

<deontic-specification>
<deontic-operators>
 <deontic-operator id="obligation"/>
 <deontic-operator id="permission"/>
</deontic-operators>

<deontic-relation type="permission" 
                  role="auctionner" 
                  mission="mAuctionner" />
<deontic-relation type="permission" 
                  role="participant" 
                  mission="mParticipant" />
</deontic-specification>

</organisational-specification>

