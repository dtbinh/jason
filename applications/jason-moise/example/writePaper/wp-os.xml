<?xml version="1.0" encoding="UTF-8"?>
<organisational-specification 
    id="wp"
    os-version="0.3"
  
    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os http://moise.sourceforge.net/xml/os.xsd' >
    
    <structural-specification>

        <role-definitions>
            <role id="author" />
            <role id="writer">
                <extends role="author"/>
            </role>
            <role id="editor">
                <extends role="author"/>
            </role>
        </role-definitions>

        <link-types>
            <link-type id="authority"/>
            <link-type id="acquaintance"/>
            <link-type id="communication"/>
        </link-types>
        <group-specification id="wpgroup">
            <roles>
                <role id="writer"/>
                <role id="editor"/>
            </roles>
            <links>
                <link from="writer" to="editor" type="acquaintance" scope="intra-group" extends-sub-groups="true" symmetric="false"/>
                <link from="editor" to="writer" type="authority" scope="intra-group" extends-sub-groups="true" symmetric="false"/>
                <link from="author" to="author" type="communication" scope="intra-group" extends-sub-groups="true" symmetric="false"/>
            </links>

            <formation-constraints>
                <cardinality min="1" max="5" object="role" id="writer"/>
                <cardinality min="1" max="1" object="role" id="editor"/>
                <compatibility from="editor" to="writer" type="compatibility" scope="intra-group" extends-sub-groups="false" symmetric="true"/>
            </formation-constraints>
        </group-specification>
    </structural-specification>



    <functional-specification>
        <scheme id="writePaperSch" root-goal="wpGoal">
            <plan operator="sequence" >
                <goal id="fdv" ds="First Draft Version">
                    <plan operator="sequence">
                        <goal id="wtitle" ds="Write a title"/>
                        <goal id="wabs"   ds="Write an abstract"/>
                        <goal id="wsectitles" ds="Write the sections' title" />
                    </plan>
                </goal>
                <goal id="sv" ds="Submission Version">
                    <plan operator="sequence">
                        <goal id="wsecs" ds="Write sections"/>
                        <goal id="wconc" ds="Write a conclusion"/>
                        <goal id="wrefs" ds="Complete references and link them to text"/>
                    </plan>
                </goal>
            </plan>

            <mission id="mColaborator" min="1" max="5">
                <goal id="wsecs"/>
            </mission>

            <mission id="mManager" min="1" max="1">
                <goal id="fdv"/>
                <goal id="wabs"/>
                <goal id="wpGoal"/>
                <goal id="wtitle"/>
                <goal id="wconc"/>
                <goal id="wsectitles"/>
            </mission>

            <mission id="mBib" min="1" max="1">
                <goal id="sv"/>
                <goal id="wrefs"/>
                <prefered mission="mColaborator"/>
                <prefered mission="mManager"/>
            </mission>
        </scheme>
    </functional-specification>

    <deontic-specification>
        <deontic-operators>
            <deontic-operator id="obligation"/>
            <deontic-operator id="permission"/>
        </deontic-operators>

        <deontic-relation type="obligation" role="writer" mission="mBib" />
        <deontic-relation type="obligation" role="writer" mission="mColaborator" />
        <deontic-relation type="permission" role="editor" mission="mManager" />
    </deontic-specification>
</organisational-specification>

